<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:contentDescription="@string/logo_desc"
        app:srcCompat="@drawable/awa" />
    <TextView
        android:id="@+id/level_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_level"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/logoView"
        app:layout_constraintBottom_toTopOf="@id/water_level_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/flow_msg"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:id="@+id/flow_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_flow"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/logoView"
        app:layout_constraintBottom_toTopOf="@+id/water_flow_view"
        app:layout_constraintStart_toEndOf="@+id/level_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_bias="0.1"
        />

    <View
        android:id="@+id/water_level_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/level_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/water_flow_view"
        app:layout_constraintStart_toStartOf="parent"
        >
    </View>

    <View
        android:id="@+id/water_flow_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/flow_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/water_level_view"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </View>

    <TextView
        android:id="@+id/pump_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bomba"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/water_level_view"
        app:layout_constraintBottom_toTopOf="@id/btnTogglePump"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_bias="0.2"
        />

    <Button
        android:id="@+id/btnTogglePump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encender"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/pump_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:flow_verticalAlign="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="25%"
        app:layout_constraintTop_toTopOf="@id/water_level_view"
        app:layout_constraintBottom_toBottomOf="@id/water_level_view"
        app:layout_constraintStart_toStartOf="@id/water_level_view"
        app:layout_constraintEnd_toEndOf="@id/water_level_view"
    />

    <TextView
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:flow_verticalAlign="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="25%"
        app:layout_constraintTop_toTopOf="@id/water_flow_view"
        app:layout_constraintBottom_toBottomOf="@id/water_flow_view"
        app:layout_constraintStart_toStartOf="@id/water_flow_view"
        app:layout_constraintEnd_toEndOf="@id/water_flow_view"
    />

</androidx.constraintlayout.widget.ConstraintLayout>